FoamFile
{
    version 2.0;
    format ascii;
    class dictionary;
    object snappyHexMeshDict;
}

castellatedMesh true;
snap            true;
addLayers       false;

geometry
{
    car.stl
    {
        type triSurfaceMesh;
        name car;
    }

    wakeBox
    {
        type searchableBox;
        min (0 -3 0);
        max (40 3 4);
    }
}

castellatedMeshControls
{
    maxLocalCells 2000000;
    maxGlobalCells 4000000;
    minRefinementCells 0;
    maxLoadUnbalance 0.10;
    nCellsBetweenLevels 3;
    resolveFeatureAngle 30;

    features ();

    refinementSurfaces
    {
        car
        {
            level (4 5);
            patchInfo
            {
                type wall;
            }
        }
    }

    refinementRegions
    {
        wakeBox
        {
            mode inside;
            levels ((4 3));
        }
    }

    // Must be in FLUID region (not inside car)
    locationInMesh (20 0 5);

    allowFreeStandingZoneFaces true;
}

snapControls
{
    nSmoothPatch 3;
    tolerance 2.0;
    nSolveIter 50;
    nRelaxIter 5;
}

// REQUIRED by v2406 parser even if addLayers=false
